@model MoviesOnDemand.ViewModels.RandomMovieViewModel
@*@model MoviesOnDemand.Models.Customer*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


    <table class="table table-bordered table-responsive table-striped table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                
            </tr>
        </thead>


        @foreach (var Customer in Model.Customers)
        {
            <tr>
             <td><p>@Html.ActionLink(Customer.Name, "Edit/" + Customer.Id, "Customers", new { area = "" }, new { @class = "nav-link" })</p></td>
                <td>@Customer.MembershipType.Name</td>     
                <td>@Customer.MembershipType.DiscountRate%</td>
        </tr>
        }
    </table>
